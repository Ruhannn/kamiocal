{
  "name": "kamiocal",
  "version": "1.0.0",
  "description": "a easy to use cli tool to share a folder to your local network",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build": "tsc",
    "start:dist": "node dist/src/index.js",
    "tailwind:css": "postcss public/styles/tailwind.css -o public/styles/style.css -w",
    "lint": "eslint --fix src",
    "typecheck": "tsc --noEmit"
  },
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "figlet": "^1.8.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.9.3",
    "@types/qrcode-terminal": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3"
  }
}
